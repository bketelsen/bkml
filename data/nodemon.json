{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
        "md": "blox build",
        "mdx": "blox build",
        "jpg": "blox build",
        "jpeg": "blox build",
        "png": "blox build",
        "gif": "blox build"
    },
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "."
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "md,mdx,jpg,jpeg,png,gif"
}
